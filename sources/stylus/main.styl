*
    margin 0
    padding 0

body
    background #201b1b
    
.dg.a
    width 220px !important
    
.application
    padding-top 10vh
    padding-bottom 10vh
    padding-right 240px
    font-size 0
    text-align center

    .pixel-sorter-canvas
        display inline-block
        
    .notification
        position fixed
        top 0
        left 0
        
        .inner
            position relative
            overflow hidden
            padding 14px
            background #303030
            font-family Helvetica, Arial
            font-size 12px
            color #fff
            transform translateY(-100%)
            transition transform 1s cubic-bezier(0.85, 0.0, 0.15, 1.0)
            will-change transform
        
        .ellipsis
            .dot
                display inline-block
                animation elipsis-dot-bounce 1s infinite
                will-change transform
                
                @keyframes elipsis-dot-bounce
                    0%
                        transform translateY(0px)
                    20%
                        transform translateY(-3px)
                    40%
                        transform translateY(0px)
                    100%
                        transform translateY(0px)
                        
                &.has-index-1
                    animation-delay 0.1s
                        
                &.has-index-2
                    animation-delay 0.2s
                    
        &.is-active
            .inner
                transform translateY(0%)